<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> Ranking</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #000;
      color: #fff;
    }
    .navbar {
      background-color: #000;
    }
    .navbar-brand {
      font-size: 24px;
      color: #fff;
      font-weight: bold;
    }
    .navbar-brand:hover {
      text-decoration: none;
    }
    .navbar-nav {
      justify-content: center;
    }
    .nav-link {
      color: #fff;
    }
    .nav-link:hover {
      color: #fff;
      text-decoration: none;
    }
    .ranking-section {
      padding: 50px 0;
    }
    .ranking-section h2 {
      font-size: 32px;
      margin-bottom: 30px;
    }
    .ranking-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    .ranking-item {
      display: flex;
      align-items: center;
      margin-bottom: 15px;
      padding: 10px;
      background-color: #222;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }
    .ranking-item img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 10px;
    }
    .ranking-item .rank {
      font-weight: bold;
      margin-right: 10px;
    }
    .ranking-item .username {
      font-weight: bold;
      font-size: 18px;
      margin-right: 10px;
    }
    .ranking-item .name {
      font-size: 18px;
      margin-right: 10px;
    }
    .ranking-item .title {
      color: #777;
      font-size: 14px;
    }
    .ranking-item a {
      color: #fff;
      text-decoration: none;
    }
    .ranking-item a:hover {
      text-decoration: none;
    }
    .back-btn {
      display: inline-block;
      width: 20px;
      height: 20px;
      margin-right: 5px;
      background-image: url("/left-arrow.png");
      background-repeat: no-repeat;
      background-size: contain;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <span class="back-btn"></span>
        Chess Leaderboard
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/leaderboard/daily">Daily Ranking</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/leaderboard/blitz">Blitz Ranking</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/leaderboard/bullet">Bullet Ranking</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/leaderboard/rapid">Rapid Ranking</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <section class="ranking-section">
      <h2><%= title %> Ranking</h2>
      <ul class="ranking-list">
        <% Object.entries(data).forEach(([key, entry]) => { %>
          <li class="ranking-item">
            <a class="nav-link" href="<%= entry.url %>">
              <img src="<%= entry.avatar %>" alt="Avatar">
              <span class="rank"><%= entry.rank %></span>
              <span class="username"><%= entry.username %></span>
              <span class="name"><%= entry.name %></span>
              <span class="title"><%= entry.title %></span>
            </a>
          </li>
        <% }) %>
      </ul>
    </section>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
